    "license": "UNLICENSED",
    "description": "Template API",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "test": "nyc --silent mocha -r ts-node/register 'src/**/*.spec.ts' --exit",
        "test-coverage": "nyc report && nyc check-coverage",
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
