        "url": "git@www-github.cisco.com:shukile/template-api.git"
    },
    "dependencies": {
        "ajv": "^7.0.2",
        "aws-sdk": "^2.438.0",
        "body-parser": "^1.18.3",
        "cors": "^2.8.5",
        "express": "^4.16.4",
        "moment": "^2.24.0",
        "mongoose": "^5.11.8",
        "node-cache": "^5.1.2"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.14",
        "chai": "^4.2.0",
        "dotenv": "^8.2.0",
        "mocha": "^8.2.1",
        "node-mocks-http": "^1.7.3",
        "nodemon": "^2.0.6",
        "nyc": "^15.0.1",
        "pre-commit": "^1.2.2",
        "sinon": "^9.2.2",
        "supertest": "^6.0.1",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "typescript": "^4.1.3"
    },
